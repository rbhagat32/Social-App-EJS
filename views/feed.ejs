<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <link rel="icon" href="/images/logo.png" />
    <link rel="stylesheet" href="/styles/styles.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="container relative mx-auto px-4 py-10 w-full min-h-screen">
      <div id="header" class="flex justify-between items-start">
        <h1 class="text-3xl sm:text-4xl mb-6">
          <span class="text-zinc-400 font-light text-sm sm:text-xl"
            >Welcome,</span
          >
          <%= user.name.split(" ")[0] %>üëã
        </h1>
        <a
          href="/logout"
          class="block relative -top-2 sm:-top-1 bg-red-500 hover:bg-red-600 text-sm sm:text-md px-4 py-2 w-fit rounded-md mt-2 font-semibold cursor-pointer"
          >Logout</a
        >
      </div>

      <div id="form" class="mt-5">
        <form
          method="post"
          action="/post"
          enctype="multipart/form-data"
          class="flex flex-col gap-2"
        >
          <textarea
            required
            name="content"
            placeholder="What's on your mind ?"
            class="text-justify w-full max-w-[600px] resize-none outline-none bg-transparent px-4 py-3 rounded-md border border-zinc-400"
          ></textarea>
          <div class="flex gap-4 items-center">
            <label
              for="imageUpload"
              class="border text-blue-400 hover:text-blue-500 border-blue-400 hover:border-blue-500 px-4 py-[7px] w-fit rounded-md mt-2 font-semibold cursor-pointer"
              >Upload Image</label
            >
            <input
              id="imageUpload"
              type="file"
              name="image"
              class="hidden outline-none bg-transparent cursor-pointer"
            />
            <input
              type="submit"
              value="Create Post"
              class="bg-blue-500 hover:bg-blue-600 px-4 py-2 w-fit rounded-md mt-2 font-semibold cursor-pointer"
            />
          </div>
        </form>
      </div>

      <div id="posts" class="mt-20 flex flex-col gap-3">
        <h3 class="text-zinc-400 font-light text-lg sm:text-xl">
          Your Posts :
        </h3>

        <% posts.reverse().forEach((post)=>{ %>
        <div
          id="single-post"
          class="text-justify max-w-[600px] outline-none bg-zinc-800 px-4 py-3 rounded-md border border-zinc-400"
        >
          <div id="header" class="mb-4 flex justify-between items-end">
            <div class="flex items-end gap-2 sm:gap-3">
              <div class="w-9 h-9 overflow-hidden rounded-full">
                <img
                  class="w-full h-full object-cover object-top"
                  src="<%= post.user.image.toString('base64') !== '' ? 
           `data:image/png;base64,${post.user.image.toString('base64')}` : 
           '/images/placeholder.png' %>"
                />
              </div>
              <h3 class="text-lg text-blue-400 mb-1 flex gap-1 items-center">
                @<%= post.user.username %> <% if (post.user.isVerified) { %>
                <div class="w-3 h-3 mt-[1px]">
                  <img src="/images/verified.png" />
                </div>
                <% } %>
              </h3>
            </div>
            <p class="mb-1">
              <% if (post.likes.indexOf(user._id) === -1) { %> ü§ç <%=
              post.likes.length %> <% } else { %> ‚ù§Ô∏è <%= post.likes.length %> <%
              } %>
            </p>
          </div>

          <div id="content" class="mb-6 flex flex-col gap-4">
            <% if (post.image && post.image.toString('base64') !== '') { %>
            <img
              class="w-full h-full object-cover object-center rounded-md"
              src="data:image/png;base64,<%= post.image.toString('base64') %>"
            />
            <% } %>

            <p><%= post.content %></p>
          </div>

          <div class="flex justify-between">
            <div class="flex gap-3">
              <a href="/like/<%= post._id %>" class="text-blue-400"
                ><%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike"
                %></a
              >
              <% if (user.isAdmin || post.user.email === user.email) { %>
              <a href="/edit/<%= post._id %>" class="text-zinc-400">Edit</a>
              <a href="/delete/<%= post._id %>" class="text-red-400">Delete</a>
              <% } %>
            </div>

            <p class="text-zinc-400 text-sm"><%= post.date %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <script src="/scripts/script.js"></script>
  </body>
</html>
